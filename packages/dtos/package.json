{
  "name": "@repo/dtos",
  "version": "0.0.0",
  "private": true,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./tasks": {
      "import": "./dist/types/tasks/index.js",
      "require": "./dist/types/tasks/index.js",
      "types": "./dist/types/tasks/index.d.ts"
    },
    "./auth": {
      "import": "./dist/types/auth/index.js",
      "require": "./dist/types/auth/index.js",
      "types": "./dist/types/auth/index.d.ts"
    },
    "./tasks/comments": {
      "import": "./dist/types/comments/index.js",
      "require": "./dist/types/comments/index.js",
      "types": "./dist/types/comments/index.d.ts"
    },
    "./tasks/assignments": {
      "import": "./dist/types/assignments/index.js",
      "require": "./dist/types/assignments/index.js",
      "types": "./dist/types/assignments/index.d.ts"
    }
  },
  "scripts": {
    "dev": "npm run build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "eslint": "^9.34.0",
    "typescript": "5.9.2"
  }
}
